@inject IWebHostEnvironment webs


<button class="btn btn-group m-2" @onclick="async ()=> await eventid.InvokeAsync(IDTable)">
    <div style="background-image:url(/image/Table.png);background-position:center;background-repeat:no-repeat;background-size:contain" >
        <div class="text-center">
            <h3 class="text-dark">@CodeChair</h3>
        </div>
        <div class="row">
          @for (var i = 0; i < CountChair; i++)
           {
              <img src="@getimage()" style="width:25px" />
           }
        </div>
        @Addture
    </div>
</button>

@code {

    [Inject]
    public IWebHostEnvironment web { get; set; }

    [Parameter]
    public int CountChair { get; set; }

    [Parameter]
    public int CodeChair { get; set; }

    [Parameter]
    public int IDTable { get; set; }

    [Parameter]
    public EventCallback<int> eventid { get; set; }

    [Parameter]
    public RenderFragment Addture { get; set; }


    string getimage()
    {
        return $"/image/Chair.png";
    }

}
